                            <a href="@Url.Action("Create","Issue")">
                                <i class="menu-icon icon-alarm_on"></i><span>Create Issue</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Issue")">
                                <i class="menu-icon icon-list-numbered"></i><span>My Issues (@(MembershipTools.GetIssueCount()))</span>
                            </a>
                        </li>
                        <li class="menu-divider"></li>
                        <li>
                            <a href="@Url.Action("Logout","Account")">
                                <i class="menu-icon icon-power2"></i><span>Logout</span>
                            </a>
                        </li>
