                        <li>
                            <a href="@Url.Action("Reports","Admin")">
                                <i class="menu-icon icon-attach_file"></i><span>Raporlar</span>
                            </a>
                        </li>
                        <li class="menu-divider"></li>

                        <li>
                            <a href="@Url.Action("Logout","Account")">
                                <i class="menu-icon icon-power2"></i><span>Çıkış</span>
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div><!-- /Page Sidebar -->