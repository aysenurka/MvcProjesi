@using TeknikServis.BLL.Identity
@using TeknikServis.Models.Enums
@model List<TeknikServis.Models.ViewModels.IssueVM>

@{
    ViewBag.Title = "Operator Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div>
    <h3 style="color:green">@TempData["Message"]</h3>
    <h3 style="color:red">@TempData["Message2"]</h3>
    <hr />
    <!-- Page Inner -->
    <div class="page-inner">
        <div id="main-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-white">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table id="example2" class="display table" style="width: 100%; mso-cellspacing: 0;">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Id</th>
                                            <th>Durum</th>
                                            <th>Teknisyen</th> 
                                            <th>Konum</th> 
                                            <th>Detay</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            var current = Model[i];
                                            <tr>
                                                <th>@(i + 1)</th>
                                                <td>@current.IssueId</td>
                                                <td>@current.IssueState</td>
                                                <td style="text-align:justify">@(current.TechnicianId == null ? "Teknisyen Atanmadı" : MembershipTools.GetNameSurname(current.TechnicianId))</td>
                                                <td>@current.Location</td>
                                                <td>
                                                    @if (current.IssueState == IssueStates.Tamamlandı)
                                                    {
                                                        <a href="@Url.Action("Details", "Operator",new {id=current.IssueId})" class="btn btn-success">Detay</a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("Details", "Operator",new {id=current.IssueId})" class="btn btn-warning">Detay</a>
                                                    }
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- Row -->
        </div><!-- Main Wrapper -->

    </div><!-- /Page Inner -->
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>


